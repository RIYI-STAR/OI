{
    "version": "2.0.0",
    "tasks": [{
        "type": "cppbuild",
        "label": "Build C++",
        "command": "g++",
        "args": [
            "-fdiagnostics-color=always",
            "-g", "${file}",
            "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe"
        ],
        "options": {"cwd": "${fileDirname}"},
        "problemMatcher": ["$gcc"],
        "group": {"kind": "build", "isDefault": true}
    }]
}
